<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignIn_Activity"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:id="@+id/mainImg">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/close_main"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close_black_24dp"
            android:padding="@dimen/_15sdp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:padding="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            />
        <ImageView
            android:id="@+id/language"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_margin="10sp"
            android:src="@drawable/language_change" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainImg"
        android:scrollbars="none"
        android:background="@android:color/transparent"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:id="@+id/et_rel"
                android:background="@drawable/et_rect_background_border_new">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/profile_pink"
                    android:src="@drawable/profile_adverj"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_emailId"
                    android:inputType="textEmailAddress"
                    android:layout_toLeftOf="@+id/close_email"
                    android:layout_toRightOf="@+id/profile_pink"
                    android:layout_marginLeft="10sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_centerInParent="true"
                    android:hint="@string/enter_email_id"
                    android:textSize="12sp"
                    android:background="@android:color/transparent">
                </EditText>
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:id="@+id/close_email"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_close_red_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:id="@+id/et_pass"
                android:background="@drawable/et_rect_background_border_new">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/mobile_img"
                    android:src="@drawable/otp_adverj"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_password"
                    android:inputType="textPassword"
                    android:layout_toLeftOf="@+id/close_pass"
                    android:layout_toRightOf="@+id/mobile_img"
                    android:layout_marginLeft="10sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_centerInParent="true"
                    android:hint="@string/enter_password"
                    android:textSize="12sp"
                    android:background="@android:color/transparent">
                </EditText>
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/close_pass"
                    android:src="@drawable/ic_close_red_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/et_button"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10sp"
                android:text="@string/new_user"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/otpRel">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:hint="Enter email or mobile"
                    android:id="@+id/otp_Rel"
                    android:background="@drawable/et_rect_background_border_new">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_otp"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="text"
                        android:layout_marginLeft="10sp"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:hint="Enter OTP\u002A"
                        android:textSize="12sp"
                        android:background="@android:color/transparent">
                    </EditText>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One time Password has been sent to your Mail Id"
                    android:textSize="8sp"
                    android:layout_gravity="left"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="11sp"
                    android:textColor="@color/black"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:text="Sign In"
                    android:id="@+id/signin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="false"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/mainLL">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="1sp"
                        android:layout_weight="1.4"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_gravity="center"
                        android:layout_margin="5sp"
                        android:background="@color/grey"/>
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_gravity="center"
                        android:layout_margin="5sp"
                        android:text="OR"/>
                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="1sp"
                        android:layout_weight="1.4"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_gravity="center"
                        android:layout_margin="5sp"
                        android:background="@color/grey"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue With"
                    android:layout_margin="5sp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:baselineAligned="false">
                    <RelativeLayout
                        android:layout_width="0sp"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:layout_margin="10sp"
                        android:padding="6sp"
                        android:id="@+id/facebookRel"
                        android:background="@drawable/et_rect_background_border_new">
                        <ProgressBar
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:id="@+id/progressFacebook"
                            android:visibility="gone"
                            android:layout_centerInParent="true"

                            />
                        <FrameLayout
                            android:id="@+id/FrameLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="25sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <com.facebook.login.widget.LoginButton
                                android:id="@+id/login_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/fb"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:padding="3sp"
                                android:layout_gravity="center"
                                android:src="@drawable/facebook" />
                        </FrameLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0sp"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:padding="11sp"
                        android:layout_margin="10sp"
                        android:id="@+id/gmailRel"
                        android:background="@drawable/et_rect_background_border_new">
                        <ProgressBar
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:id="@+id/progressGmail"
                            android:visibility="gone"
                            android:layout_centerInParent="true"

                            />
                        <ImageView
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:padding="3sp"
                            android:id="@+id/imgGmail"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/gmail"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="version 1.0"
        android:layout_alignParentBottom="true"
        android:id="@+id/vendorReg"
        android:layout_margin="10sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerInParent="true"
        android:textSize="10sp"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>
